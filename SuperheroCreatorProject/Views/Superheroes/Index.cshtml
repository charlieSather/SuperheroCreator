@model IEnumerable<SuperheroCreatorProject.Models.Superhero>

@{
    ViewData["Title"] = "Superheroes";
}

<h1 class="text-center">Superheroes</h1>

<p>
    <button class="btn btn-outline-primary" onclick="location.href='@Url.Action("Create")';return false;">Add Hero</button>
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.Name)
                </th>
                <th>
                    Actions
                </th>
                <th></th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-link p-0 text-decoration-none">@item.Name</a>
                        @*@Html.ActionLink($"{item.Name}", "Details", new { primaryKey = item.Id })*@
                    </td>
                    <td id="actionList" class="form-inline">
                        <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-link p-0 mr-1 text-decoration-none">Edit</a> |
                        @using (Html.BeginForm("Delete", "Superheroes", new { Id = item.Id }, FormMethod.Post, true, new { @class = "form-inline" }))
                        {
                            <input type="submit" value="Delete" class="btn btn-link p-0 ml-1 text-decoration-none" />
                        }
                        @*<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                        @* anchor tag's are always get requests and all deletions should be handled with post requests *@
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <div class="container-fluid">
        <div class="row">
            <div class="col-sm-12">
                <img src="../css/Magneto.jpg" class="img-responsive w-100" alt="Magneto" />
            </div>
        </div>
    </div>


