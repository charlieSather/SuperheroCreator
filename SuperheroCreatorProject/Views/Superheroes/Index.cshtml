@model IEnumerable<SuperheroCreatorProject.Models.Superhero>

@{
    ViewData["Title"] = "Superheroes";
}

<h1 class="text-center">Superheroes</h1>

<p>
    <a asp-action="Create" class="btn btn-link">Create New</a>
</p>
<table class="table" >
    <thead>
        <tr>
            <th id="nameId">
                @Html.DisplayNameFor(model => model.Name)
            </th>
            <th id="actionsId">
                Actions
            </th>
            <th></th>
        </tr>
    </thead>
    <tbody>
@foreach (var item in Model) {
        <tr>
            <td>
                <a asp-action="Details" asp-route-id="@item.Id" class="btn btn-link">@item.Name</a>
                @*@Html.ActionLink($"{item.Name}", "Details", new { primaryKey = item.Id })*@
            </td>
            <td id="actionList" class="form-inline">
                <a asp-action="Edit" asp-route-id="@item.Id" class="btn btn-link">Edit</a> |
                @using (Html.BeginForm("Delete", "Superheroes", new { Id = item.Id }, FormMethod.Post, true, new { @class = "form-inline" }))
                {
                    <input type = "submit" value = "Delete" class="btn btn-link" />
                }
                @*<a asp-action="Delete" asp-route-id="@item.Id">Delete</a>*@
                @* anchor tag's are always get requests and should handle deletions with post requests *@
            </td>
        </tr>
}
    </tbody>
</table>
<div class="container-fluid">
    <div class="row">
        <div class="col-sm-12">
            <img src="../css/Magneto.jpg" class="img-responsive w-100" alt="Magneto" />
        </div>
    </div>
</div>


